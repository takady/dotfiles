escape ^Tt
startup_message off
markkeys h=^B:l=^F:$=^E:^U=^Z:^D=^V
# hardstatus alwayslastline "%`%-w%{= bw}%n %t%{-}%+w"
hardstatus alwayslastline "%-w%{= ck}%n %t%{-}%+w"

# copy mode
markkeys h=^b:l=^f:0=^a:j=^n:k=^p:$=^e:^d=^v
bindkey -m ^k stuff ' $ '
bindkey -m ^g stuff !
bindkey -m ^[w eval 'msgwait 0' 'stuff \040' writebuf 'exec !!! xclip /tmp/screen-exchange' 'msgwait 1'
bindkey -m ^[W eval 'msgwait 0' 'stuff \040' writebuf 'exec !!! xclip /tmp/screen-exchange' 'msgwait 1'
